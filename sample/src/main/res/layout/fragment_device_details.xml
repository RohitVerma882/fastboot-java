<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
	
    <data>
        <variable name="device" type="com.rv882.fastbootjava.sample.data.FastbootDevice" />
    </data>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.rv882.fastbootjava.sample.ui.devicedetails.DeviceDetailsFragment">

        <TextView
            android:id="@+id/tv_device_id"
            android:text='@{"Device Id: " + device.deviceId}'
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:padding="16dp" />

        <TextView
            android:id="@+id/tv_serial_no"
            android:text='@{"Serial Number: " + device.serialNumber}'
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="16dp" />

        <TextView
            android:id="@+id/tv_current_slot"
            android:text='@{"Current Slot: " + device.currentSlot}'
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="16dp" />
    </LinearLayout>
	
</layout>
